<% include ./partials/header %>

<div style="margin: 0 auto; max-width: 400px">
    <h1 style="text-align: center">Sign Up</h1>
    <div>
        <form action="/register" method="post">
            <div class="form-group">
                <label for="username">Username</label>
                <input id="username" class="form-control" type="text" name="username" placeholder="JoeBloggs">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input id="password" class="form-control" type="password" name="password" placeholder="Enter Password Here">
            </div>
            <div class="form-group">
                <label for="firstName">First Name</label>
                <input id="firstName" class="form-control" type="text" name="firstName" placeholder="Joe">
            </div>
            <div class="form-group">
                <label for="lastName">Last Name</label>
                <input id="lastName" class="form-control" type="text" name="lastName" placeholder="Bloggs">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input id="email" class="form-control" type="email" name="email" placeholder="JoeBloggs@gmail.com">
            </div>
            <div id="adminCode "class="form-group">
                <input class="form-control" type="text" name="adminCode" placeholder="admin code">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ./partials/footer %>