<% include ../partials/header %>


<div class="row" style="margin: 0 auto; max-width: 400px">
    <h1 style="text-align: center;">Create a New Campground</h1>
    <div>
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input id="name" class="form-control" type="text" placeholder="Mount Everest" name="name">
            </div>
            <div class="form-group">
                <label for="image">Image URL</label>
                <input id="image" class="form-control" type="text" placeholder="http://..." name="image">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input id="description" class="form-control" type="text" placeholder="A really, really tall mountain..." name="description">
            </div>
            <div class="form-group">
                <label for="price">Price (Â£/night)</label>
                <input id="price" class="form-control" type="number" placeholder="15.99" name="price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input id="location" class="form-control" type="text" placeholder="Mt Everest" name="location">
            </div>
            <div class="form-group">
                <button class="btn btn-md btn-primary btn-block">Submit</button>
            </div>
        </form>    
        <a href="/campgrounds">Go Back</a>
    </div>
</div>    
    
<% include ../partials/footer %>