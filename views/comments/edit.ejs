<% include ../partials/header %>

<div class="row">
    <h2 style="text-align: center;">Edit <%= comment.author.username %>'s Comment on <%= campground.name %></h2>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <button class="btn btn-md btn-primary btn-block">Submit</button>
            </div>
        </form>    
        <a href="/campgrounds/<%= campground._id %>">Go Back to <%= campground.name %></a>
    </div>
</div>    

<% include ../partials/footer %>